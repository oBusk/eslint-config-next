{
  "name": "@obusk/eslint-config-next",
  "version": "15.6.1-3",
  "type": "module",
  "description": "A strict configuration for using Next.js and Tailwind",
  "keywords": [
    "eslint",
    "eslintconfig",
    "next",
    "tailwind"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "files": [],
  "author": "Oscar Busk <oscar.busk@gmail.com>",
  "license": "ISC",
  "repository": {
    "url": "git+https://github.com/oBusk/eslint-config-next.git"
  },
  "homepage": "https://github.com/oBusk/eslint-config-next#readme",
  "publishConfig": {
    "access": "public"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "24.11.0",
      "onFail": "download"
    },
    "packageManager": {
      "name": "pnpm",
      "version": "10.20.0",
      "onFail": "download"
    }
  },
  "packageManager": "pnpm@10.20.0",
  "simple-git-hooks": {
    "pre-commit": "pnpm run lint-staged"
  },
  "lint-staged": {
    "**/*.{md,js,json,yaml,yml}": [
      "prettier --ignore-path .gitignore --ignore-path .prettierignore --write"
    ],
    "index.js": [
      "tsc --noEmit --allowJs"
    ],
    "*.ts": [
      "tsc --noEmit"
    ]
  },
  "scripts": {
    "prettier": "prettier **/*.{md,js,json,yaml,yml} --ignore-path .gitignore --ignore-path .prettierignore --check",
    "prettier-fix": "prettier **/*.{md,js,json,yaml,yml} --ignore-path .gitignore --ignore-path .prettierignore --write",
    "lint-staged": "lint-staged",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsdoc": "^61.1.9",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-testing-library": "^7.13.3"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "jest": "*",
    "next": ">=15.3.0",
    "prettier": ">=3.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.9.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  }
}
