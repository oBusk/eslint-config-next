{
  "name": "@obusk/eslint-config-next",
  "version": "15.3.3",
  "type": "module",
  "description": "A strict configuration for using Next.js and Tailwind",
  "keywords": [
    "eslint",
    "eslintconfig",
    "next",
    "tailwind"
  ],
  "main": "index.js",
  "files": [],
  "author": "Oscar Busk <oscar.busk@gmail.com>",
  "license": "ISC",
  "repository": {
    "url": "git+https://github.com/oBusk/eslint-config-next.git"
  },
  "homepage": "https://github.com/oBusk/eslint-config-next#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "22.X"
  },
  "volta": {
    "node": "22.19.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint-staged"
  },
  "lint-staged": {
    "**/*.{md,js,json,yml}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "prettier": "prettier **/*.{md,js,json,yml} --ignore-path .gitignore --check",
    "prettier-fix": "prettier **/*.{md,js,json,yml} --ignore-path .gitignore --write",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsdoc": "^54.1.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-testing-library": "^7.6.6"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "jest": "*",
    "next": ">=15.3.0",
    "prettier": ">=3.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.8.0"
  },
  "devDependencies": {
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1"
  }
}
