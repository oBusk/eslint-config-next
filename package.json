{
  "name": "@obusk/eslint-config-next",
  "version": "16.1.1",
  "type": "module",
  "description": "A strict configuration for using Next.js and Tailwind",
  "keywords": [
    "eslint",
    "eslintconfig",
    "next",
    "tailwind"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "files": [],
  "author": "Oscar Busk <oscar.busk@gmail.com>",
  "license": "ISC",
  "repository": {
    "url": "git+https://github.com/oBusk/eslint-config-next.git"
  },
  "homepage": "https://github.com/oBusk/eslint-config-next#readme",
  "publishConfig": {
    "access": "public"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^24.13.0",
      "onFail": "download"
    }
  },
  "packageManager": "pnpm@10.28.2",
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm typecheck && pnpm run -r lint"
  },
  "lint-staged": {
    "**/*.{md,js,mjs,cjs,ts,mts,cts,json,yaml,yml}": [
      "prettier --ignore-path .gitignore --ignore-path .prettierignore --write"
    ]
  },
  "scripts": {
    "prettier": "prettier '**/*.{md,js,mjs,cjs,ts,mts,cts,json,yaml,yml}' --ignore-path .gitignore --ignore-path .prettierignore --check",
    "prettier-fix": "prettier '**/*.{md,js,mjs,cjs,ts,mts,cts,json,yaml,yml}' --ignore-path .gitignore --ignore-path .prettierignore --write",
    "lint-staged": "lint-staged",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/eslintrc": "^3.3.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-jsdoc": "^62.4.1",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-testing-library": "^7.15.4"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "jest": "*",
    "next": ">=16.0.10",
    "prettier": ">=3.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.9.0"
  },
  "devDependencies": {
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "@types/node": "^24.10.9",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  }
}
