# Enforce engine constraints
engine-strict=true

# Use frozen lockfile in CI and production
frozen-lockfile=true

# Use the specified Node.js version
use-node-version=22.21.0

# Don't install packages published within the last week (7 days = 604800000 ms)
publish-age=604800000

# Enable postinstall scripts for packages that need them
enable-pre-post-scripts=true
