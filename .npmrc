# Enforce engine constraints
engine-strict=true

# Prevent lockfile from being modified unexpectedly (applies to all developers and CI)
frozen-lockfile=true

# Use the specified Node.js version
use-node-version=22.21.0

# Don't install packages published within the last week (7 days = 604800000 ms)
publish-age=604800000

# Only allow specific packages to run lifecycle scripts (see package.json pnpm.onlyBuiltDependencies)
enable-pre-post-scripts=false
